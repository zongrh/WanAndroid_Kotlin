<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/home_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/home_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_item_author"
            android:layout_alignParentRight="true"
            android:text="1天前"/>

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_item_author"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/home_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_item_title"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/ic_launcher_background"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/home_item_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_item_type"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_no_like"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>